# Django settings
DEBUG=False
SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=gitako.settings.production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database settings
# These will typically be provided by cPanel
DB_NAME=cpanel_db_name
DB_USER=cpanel_db_user
DB_PASSWORD=your-cpanel-db-password
DB_HOST=localhost
DB_PORT=3306

# Redis settings (if available through cPanel)
# Comment out if not available
REDIS_URL=redis://localhost:6379/0

# Email settings (use cPanel mail settings)
EMAIL_HOST=mail.yourdomain.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# AWS settings (for media storage and backups)
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=gitako-media
AWS_BACKUP_BUCKET_NAME=gitako-backups

# Application version
APP_VERSION=1.0.0

# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-slack-webhook